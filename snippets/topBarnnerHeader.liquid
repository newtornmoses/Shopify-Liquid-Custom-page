<div class="header_top__barner bg-gray-200 w-full h-24 flex justify-between">
  
 <a href="/" class="header_top__barner__logo">
  
  <img
  
    src="https://cdn.shopify.com/s/files/1/0549/9463/2764/files/naturesbarn_logo_88ed2a68-8548-401b-b34e-ca459b7448bf_720x.png?v=1636266050"
    {% comment %} src="https://organicpositive.in/wp-content/uploads/2020/08/o-positive_Logo.png" {% endcomment %}
    alt=""
    class="image_barnner"
  />
 </a>
  <form action="{{ routes.search_url }}" class="search_form"> 
  <div class="search_div flex space-x-4">
   
  
    <input
      type="search"
      name="q"
      class="search_barner_input"
      placeholder="Search Products here"
      value="{{ search.terms | escape }}"
    />
    <button class="seachBtn" type="submit" value="Search">Search</button>
  </div>

</form>
  

</div>

<div class="bottom__section">
  <div class="bottom__menu__header">

    <!-- Main Menu  -->
    <div
      class="
        grid__item
        post-large--two-thirds post-large--display-table-cell
        medium-down--hide main__menu
      "
    >
      {% render 'site-nav' with linklists[section.settings.nav_menu] %}
      <a href="{{ routes.cart_url }}" class="cart-page-link mobile-cart-page-link">
        <span class="icon icon-cart header-bar__cart-icon" aria-hidden="true"></span>
        {{ 'layout.cart.title' | t }} <span class="cart-count{% if cart.item_count == 0 %} hidden-count{% endif %}">{{ cart.item_count }}</span>
      </a>
    </div>
    
    <!-- Mobile Menu  -->
    <div class="wrapper post-large--hide">
      {% unless section.settings.nav_menu == blank and section.settings.header_search_enable == false and shop.customer_accounts_enabled == false %}
        <button type="button" class="mobile-nav-trigger" id="MobileNavTrigger" aria-controls="MobileNav" aria-expanded="false">
          <span class="icon icon-hamburger" aria-hidden="true"></span>
          {{ 'layout.navigation.menu' | t }}
        </button>
      {% endunless %}
      <a href="{{ routes.cart_url }}" class="cart-page-link mobile-cart-page-link">
        <span class="icon icon-cart header-bar__cart-icon" aria-hidden="true"></span>
        {{ 'layout.cart.title' | t }} <span class="cart-count{% if cart.item_count == 0 %} hidden-count{% endif %}">{{ cart.item_count }}</span>
      </a>
    </div>
    {% render 'mobile-nav' with linklists[section.settings.nav_menu] %}
  </div>
  </div>

  <div class="cart"></div>
</div>

 {% if template == 'index' %}
<div class="top_deals">
  <!-- Natural-products -->
<div class="products_collection">
  <div class="collection_title_div">
    <span class="bar"></span>

    <div class="title">
      <h1 class="collection__title">
        <span class="collection_text_span">TODAYâ€™S </span> BESTSELLERS
      </h1>
    </div>
    <span class="bar"></span>
  </div>
  <div class="product_collection__wrapper">
    {% for product in collections['Natural-products'].products %}

    <div class="product">
      <a href="{{ product.url}}" class="product__link">
        <img src={{ product.images[0] | img_url: "medium" }} alt={{
          product.title
        }}
        class="product_img">
      </a>
      <p class="product_title">{{ product.title }}</p>
      <p class="product_price">{{ product.price | money }}</p>
      <div class="addtoCart_container">
        <!-- <form action="/cart/add" method="post" id="product-form-{{ product.id }}">   
  <input type="hidden" name="id" value="{{ product.variants.first.id }}"> -->
        <a href="{{product.url}}" class="product__link">
          <button class="addTocart">View Item</button>
        </a>
        <!-- </form> -->
      </div>
    </div>

    {% endfor %}
  </div>
</div> 

</div>

<hr>
{% endif %}



