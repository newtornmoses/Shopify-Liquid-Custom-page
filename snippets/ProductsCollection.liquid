<!-- organic-products -->
<div class="products_collection">
    <div class="product_collection__wrapper">
{% for product in collections['all'].products %}
   
<div class="product">
    <a href={{ product.url}} class="product__link">
    <img src={{ product.images[0] | img_url: "medium" }}  alt={{product.title}} class="product_img">
</a>
<p class="product_title"> {{ product.title }}</p>
<p class="product_price">{{product.price | money}} </p>
<div class="addtoCart_container">
    <form action="/cart/add" method="post" id="product-form-{{ product.id }}">   
  <input type="hidden" name="id" value="{{ product.variants.first.id }}">
<button class="addTocart">Add to Cart</button>
</form>

</div>
</div>
  

  
{% endfor %}
    </div>
</div>


<style>
    .products_collection {
    margin: 0 auto !important;
    width: 73%;
    margin-top: 40px !important;
   
  }


  
    .product_collection__wrapper {
    display: flex;
    grid-auto-flow: column;
    grid-template-columns: auto auto auto auto;
    align-items: center;
    flex-direction: row;
    flex-wrap: wrap;
    column-gatp: 67px;
    justify-content: space-between;
}

.product {
    width: 226px;
    margin-bottom: 40px;   
    height: 283px;
    border: 1px solid #8080803d;

}

img.product_img {
    width: 100%;
    max-height: 197px;
    object-fit: cover;
    height: 150px;
    cursor: pointer;
}

button.addTocart {
    border: navajowhite;
    background: #ff7322;
    color: white;
    width: 148px;
    font-size: 14px;
    height: 35px;
}

button.addTocart:hover {
    background: #2a2a2a;
}


.addtoCart_container {
    display: flex;
    justify-content: center;
    font-size: 17px;
}

p.product_title {
    text-align: center;
    font-size: 13px;
}

p.product_price {
    text-align: center;
    color: #607d8b;
    font-size: 14px;
    font-weight: bold;
}

@media screen and (max-width:640px) {
    .product {
    width: 452px;
}
}
</style>